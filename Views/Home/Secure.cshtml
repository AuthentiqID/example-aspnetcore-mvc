@using Microsoft.AspNetCore.Authentication;
@{
    ViewData["Title"] = "Secure";
}

<div class="row">
    <div class="col-md-12">

		<h2>@ViewData["Title"]</h2>
        <h3>User claims</h3>
        <p>This page displays all the claims associated with the current User. This is useful when debugging to see which claims are being populated from the Authentiq ID Token.</p>

        <table class="table">
            <thead>
            <tr>
                <th>
                    Claim
                </th>
                <th>
                    Value
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var claim in User.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@claim.Value</td>
                </tr>
            }
            </tbody>
        </table>

		<table class="table">
            <thead>
            <tr>
                <th>
                    Token
                </th>
                <th>
                    Value
                </th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>access token</td>
                    <td>@await ViewContext.HttpContext.GetTokenAsync("access_token")</td>
                </tr>

                <tr>
                    <td>refresh token</td>
                    <td>@await ViewContext.HttpContext.GetTokenAsync("refresh_token")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
